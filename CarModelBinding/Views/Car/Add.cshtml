@model Car
@{
    ViewData["Title"] = "Add Car";
}

<h1>Add a New Car</h1>
@if (ViewData["Message"] == null)
{
<form method="post">
    <div class="form-group">
        <label asp-for="Make"></label>
        <input asp-for="Make" class="form-control" />
        <span asp-validation-for="Make"></span>
    </div>

    <div class="form-group">
        <label asp-for="Model"></label>
        <input asp-for="Model" class="form-control" />
        <span asp-validation-for="Model"></span>
    </div>

    <div class="form-group">
        <label asp-for="Year"></label>
        <input asp-for="Year" class="form-control" />
        <span asp-validation-for="Year"></span>
    </div>

    <div class="form-group">
        <label asp-for="Engine"></label>
        <input asp-for="Engine" class="form-control" />
        <span asp-validation-for="Engine"></span>
    </div>

    <div class="form-group">
        <label asp-for="Trim"></label>
        <input asp-for="Trim" class="form-control" />
        <span asp-validation-for="Trim"></span>
    </div>

    <input class="btn btn-primary" type="submit" value="Add Car" />
</form>
}
else
{
    <h2>@ViewData["Message"]</h2>
}

@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}
